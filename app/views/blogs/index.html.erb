


<style>
  /* Table styles */
  .blog-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
  }

  .blog-table td {
    padding: 10px;
    text-align: center;
    border: 1px solid #ccc;
  }

  /* Link styles */
  .blog-link {
    text-decoration: none;
    color: #007bff;
    font-weight: bold;
    transition: color 0.3s ease;
  }

  .blog-link:hover {
    color: #0056b3;
  }

  /* Button styles */
  .edit-button,
  .remove-button {
    background-color: #007bff;
    color: #fff;
    border: none;
    padding: 5px 10px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    cursor: pointer;
    border-radius: 3px;
    transition: background-color 0.3s ease;
    font-weight: bold;
    font-family: Arial, sans-serif;
    text-transform: uppercase;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
  }

  .edit-button:hover,
  .remove-button:hover {
    background-color: #0056b3;
  }

  .remove-button {
    background-color: #dc3545;
  }

  /* Centered container */
  .center {
    text-align: center;
    margin-top: 20px;
  }

  /* Add new blog link */
  .add-blog-link {
    background-color: #28a745;
    color: #fff;
    padding: 5px 10px;
    text-decoration: none;
    border-radius: 3px;
    transition: background-color 0.3s ease;
    font-weight: bold;
    font-family: Arial, sans-serif;
    text-transform: uppercase;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
  }

  .add-blog-link:hover {
    background-color: #1e7f39;
  }

  /* Heading */
  h1 {
    font-size: 24px;
    color: #333;
    margin-bottom: 10px;
    font-weight: bold;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 2px;
  }
</style>

<h1>All Blogs:--</h1>

<table class="blog-table">
  <% @blogs.each do |blg| %>
  <tr>
    <td><%= link_to blg.title, blog_path(blg), class: 'blog-link' %></td>
    <td><%= button_to 'Edit', edit_blog_path(blg), method: :get, class: 'edit-button' %></td>
    <td><%= button_to 'Remove', blog_path(blg), method: :delete, data: { confirm: 'Are you sure?' }, class: 'remove-button' %></td>
  </tr>
  <% end %>
</table>

<div class="center">
  <%= link_to "Add new blog", new_blog_path, class: 'add-blog-link' %>
</div>

